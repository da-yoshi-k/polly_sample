<div class="row mb-3 justify-content-center text-center">
  <div class="col-lg-4">
  <%= render 'shared/flash_message' %>
    <%= form_with model: [room, message], id: 'new_message' do |f| %>
      <%= f.text_area :body, class: 'form-control mb-3', placeholder: 'メッセージ（100文字まで）' %>
      <%= f.submit '投稿', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row align-items-center border-bottom">
    <div class="text-end my-3" style="width:4rem;">
      <button
        id="js-audio-button"
        type="button"
        class="btn btn-outline-secondary rounded-circle p-0"
        style="width:3rem;height:3rem;"
        data-audio-url="<%= ENV['CLOUDFRONT_BASE_URL'] + message.audio_file_name %>"
      >
        <i class="fas fa-play text-dark"></i>
      </button>
    </div>
    <div class="col-9 my-3">
      <h3 class="text-left mb-0">
        <%= message.body %>
      </h3>
    </div>
  </div>
</div>
